<h1>Recipe's</h1><hr>
<div><button type="button" name="edit" onclick="window.location='recipes/new';" class="btn btn-primary btn-lg btn-block">New Recipe</button>
</div>
<h1>Most Popular</h1><hr><br>


<div>
<div class="container">

 <div class="row"> 
     
  <div class="col-sm-6 col-md-4">
      {{#each recipe}}
    <div class="thumbnail">
       
      <img src="{{this.image}}" alt="...">
      <div class="">
        <h3>Name:{{this.name}}</h3>
        <p>
           <h1>Description:{{this.description}}</h1><br>

            <h2>Directions:{{this.directions}}</h2><br>
           <h2>Time:{{this.time}}</h2> <br>
        </p>
        <p><a href="recipes/{{this._id}}/edit" class="btn btn-primary" role="button">Edit</a> <a href="recipes/{{this._id}}/delete" class="btn btn-danger" role="button">Delete</a></p>
      </div>
    </div>
  </div>
</div>
</div>


{{/each}}




